@model Farias_Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borrar</h1>
@if (ViewBag.ultimo != Model.NumeroPago)
{
    <h3>Este registro no se puede Borrar</h3>
}
else
{
    <h3>Seguro quiere borrar esto?</h3>
}


<div>
    <h4>Pago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdPago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPago)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroPago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroPago)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdContrato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdContrato)
        </dd>

        <dt class="col-sm-2">
            Inquilino
        </dt>
        <dd class="col-sm-10">
            @(Model.Contrato.Inquilino.Nombre + " " + Model.Contrato.Inquilino.Apellido)
        </dd>

        <dt class="col-sm-2">
            Propiedad
        </dt>
        <dd class="col-sm-10">
            @(Model.Contrato.Inmueble.Tipo + " en " + Model.Contrato.Inmueble.Direccion)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Importe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Importe)
        </dd>
    </dl>

    <form asp-action="Delete">
        @if (ViewBag.ultimo != Model.NumeroPago)
        {
            <input id="Borrar" type="submit" value="Borrar" class="btn btn-danger" disabled />
        }
        else
        {
            <input id="Borrar" type="submit" value="Borrar" class="btn btn-danger" />
        }
        |

        <a asp-action="Index" class="btn btn-primary">Volver a la Lista</a>



    </form>
</div>

