@model Farias_Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Pago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdPago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPago)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroPago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroPago)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdContrato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdContrato)
        </dd>
        <dt class="col-sm-2">
            Inquilino
        </dt>
        <dd class="col-sm-10">
            @(Model.Contrato.Inquilino.Nombre + " " + Model.Contrato.Inquilino.Apellido)
        </dd>
        <dt class="col-sm-2">
            Inmueble
        </dt>
        <dd class="col-sm-10">
            @(Model.Contrato.Inmueble.Tipo + " en " + Model.Contrato.Inmueble.Direccion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Importe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Importe)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdPago" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-primary">Volver a la Lista</a>
</div>
