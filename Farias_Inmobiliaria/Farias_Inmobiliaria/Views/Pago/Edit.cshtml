@model Farias_Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPago" class="control-label"></label>
                <input asp-for="IdPago" class="form-control" disabled/>
                <span asp-validation-for="IdPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroPago" class="control-label" ></label>
                <input asp-for="NumeroPago" class="form-control" disabled/>
                <span asp-validation-for="NumeroPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label"></label>

                <select class="form-control" name="IdPropietario" disabled>
                    @foreach (var item in (IList<Contrato>)ViewBag.Contratos)
                    {
                        @:<option @(item.IdContrato == Model.Contrato.IdContrato ? "selected" : "") value="@item.IdContrato">@(item.Inmueble.IdInmueble + "- " + item.Inmueble.Tipo + " " + item.Inmueble.Direccion)</option>
                    }
                </select>

                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-primary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
