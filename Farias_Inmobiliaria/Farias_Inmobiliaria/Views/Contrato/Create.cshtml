@model Farias_Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="IdGarante" class="control-label"></label>

                <select class="form-control" name="IdGarante">
                    @if (ViewBag.Garantes != null)
                    {
                        @foreach (var item in (IList<Garante>)ViewBag.Garantes)
                        {
                            <option value="@item.IdGarante">@(item.IdGarante + "-" +item.Nombre + " " + item.Apellido)</option>
                        }
                        <option value="" selected disabled>Seleccione un Garante...</option>

                    }
                </select>

                <span asp-validation-for="IdGarante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdInmueble" class="control-label"></label>

                <select class="form-control" name="IdInmueble">
                    @if (ViewBag.Inmuebles != null)
                    {
                        @foreach (var item in (IList<Inmueble>)ViewBag.Inmuebles)
                        {
                            <option value="@item.IdInmueble">@(item.IdInmueble + "-" + item.Tipo + " " + item.Direccion + " " +item.Duenio.Nombre + " " + item.Duenio.Apellido)</option>
                        }
                        <option value="" selected disabled >Seleccione un Inmueble...</option>

                    }
                </select>

                <span asp-validation-for="IdInmueble" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdInquilino" class="control-label"></label>

                <select class="form-control" name="IdInquilino">

                    @if (ViewBag.Inquilinos != null)
                    {

                        @foreach (var item in (IList<Inquilino>)ViewBag.Inquilinos)
                        {
                            <option value="@item.IdInquilino">@(item.IdInquilino + "-" +item.Nombre + " " + item.Apellido)</option>
                        }
                        <option value="" selected disabled>Seleccione un inquilino...</option>

                    }
                </select>

                <span asp-validation-for="IdInquilino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input type="Date"  asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input  type="Date" asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoAlquiler" class="control-label"></label>
                <input asp-for="MontoAlquiler" class="form-control" placeholder="Monto del alquiler" />
                <span asp-validation-for="MontoAlquiler" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-primary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

<div>
  
</div>

