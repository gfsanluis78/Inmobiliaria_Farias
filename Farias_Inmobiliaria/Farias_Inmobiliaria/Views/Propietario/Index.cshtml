@model IEnumerable<Farias_Inmobiliaria.Models.Propietario>

@{
    ViewData["Title"] = "Propietarios";
}

<h1>Listado de Propietarios</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPropietario)
            </th>
            <th>
                Nombre completo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th>
                Acciones
            </th>
            <th>
                Propiedades
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPropietario)
            </td>
            <td>
                @item.Nombre @item.Apellido 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPropietario" title="Editar"><span class="lnr lnr-pencil"></span></a>&nbsp; |
                <a asp-action="Details" asp-route-id="@item.IdPropietario" title="Detalles"><span class="lnr lnr-eye"></span></a>&nbsp; |
                <a asp-action="Delete" asp-route-id="@item.IdPropietario" title="Eliminar"><span class="lnr lnr-cross"></span></a>
              
            </td>
            <td>
                <a class="btn btn-secondary" asp-controller="Inmueble" asp-action="BusquedaTodos" asp-route-id="@item.IdPropietario" title="Propiedades">Propiedades</a>

            </td>
        </tr>
}
    </tbody>
</table>
