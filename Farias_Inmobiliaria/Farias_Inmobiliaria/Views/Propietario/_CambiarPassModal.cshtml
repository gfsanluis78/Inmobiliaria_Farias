@model Farias_Inmobiliaria.Models.Propietario

<div class="container">
    <div class="row">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>

                        <form id="formCambiarPass" asp-action="EditPassPost" enctype="multipart/form-data">

                            <p id="texto">Ingrese su nueva contraseña...</p>

                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                            <p id="texto">Vuelva a ingresar su nueva contraseña...</p>

                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </form>

                    </div>

                </div>
                <div class="modal-footer">

                    <button id="buttonModal" type="button" class="btn btn-primary" hidden>Cambiar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>

                </div>
            </div>
        </div>
    </div>

</div>



<script type="text/javascript">

    $("#formCambiarPass").change(function () {
        $("#buttonModal").attr("hidden", false);
        $("#texto").text("Presione el boton cambiar...");

    });

    console.log("Pasando1");
    $("#buttonModal").click(function (event) {
        console.log("Hola1");
        $('#formCambiarPass').submit();
        console.log("Hola2");

    });

    //alert("hola");

</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
